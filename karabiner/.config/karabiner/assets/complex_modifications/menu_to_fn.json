{
    "title": "Map Menu key to Globe (fn)",
    "rules": [
        {
            "description": "Change Menu key to fn (Globe)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "application",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ]
                }
            ]
        }
    ]
}
